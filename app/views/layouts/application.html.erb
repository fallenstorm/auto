<!DOCTYPE html>
<html>
<head>
  <title>Auto</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= alert %>
<%= notice %>

<% if user_signed_in? %>
    <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
<% end %>

<% unless params[:admin] %>
    <% if user_signed_in? %>
        <%= link_to "Админка", rails_admin_path, :method => :get %>
    <% end %>
<% end %>

<%= yield %>

</body>
</html>
